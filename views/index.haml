!!!html5
%html  
  %body
    %form{:action => "./upload", :method => "post", :enctype => "multipart/form-data"}
      Tweet:
      %input{:type => "textarea", :name => "tweet"}  
      %input{:type => "file", :name => "file"}
      %input{:type => "submit", :name => "submit"}
      %br
      %br	
    %div
      Records in the database:
    %table{:border => "1"}
      %tr
        %th ID
        %th Tweet    
        %th Length
        %th Created at
        %th Image
      - @posts.each do |post|
        %tr
          %td #{post.id}
          %td #{post.title}     
          %td #{post.tweet_num}
          %td #{post.created_at}
          %td
            %a{:href => "images/#{post.image_path}"}
              %img{:src => "images/#{post.image_path}",
                   :alt => "No images",
                   :title => "Image",
                   :width => "50px",
                   :height => "50px"}
	      